#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'optparse'
require 'fileutils'

class TestRunner
  def initialize
    @options = {
      pattern: nil,
      format: 'progress',
      verbose: false,
      coverage: false,
      fail_fast: false,
      seed: nil,
      profile: false
    }
    
    @project_root = File.expand_path('..', __dir__)
    @spec_dir = File.join(@project_root, 'spec')
  end

  def run(args = ARGV)
    parse_options(args)
    setup_environment
    execute_tests
  end

  private

  def parse_options(args)
    parser = OptionParser.new do |opts|
      opts.banner = "Uso: #{File.basename($0)} [opÃ§Ãµes] [arquivos]"
      opts.separator ""
      opts.separator "OpÃ§Ãµes:"

      opts.on("-p", "--pattern PATTERN", "Executa apenas testes que correspondem ao padrÃ£o") do |pattern|
        @options[:pattern] = pattern
      end

      opts.on("-f", "--format FORMAT", "Formato de saÃ­da (progress, doc, json, html)") do |format|
        @options[:format] = format
      end

      opts.on("-v", "--verbose", "SaÃ­da verbosa") do
        @options[:verbose] = true
      end

      opts.on("-c", "--coverage", "Habilita cobertura de cÃ³digo") do
        @options[:coverage] = true
      end

      opts.on("--fail-fast", "Para na primeira falha") do
        @options[:fail_fast] = true
      end

      opts.on("-s", "--seed SEED", "Define seed para ordem dos testes") do |seed|
        @options[:seed] = seed
      end

      opts.on("--profile", "Mostra os testes mais lentos") do
        @options[:profile] = true
      end

      opts.on("-h", "--help", "Mostra esta mensagem de ajuda") do
        puts opts
        exit
      end

      opts.separator ""
      opts.separator "Exemplos:"
      opts.separator "  bin/test                                    # Executa todos os testes"
      opts.separator "  bin/test spec/quick_status_spec.rb          # Executa teste especÃ­fico"
      opts.separator "  bin/test -p 'Temas'                        # Executa testes que contÃªm 'Temas'"
      opts.separator "  bin/test -f doc                             # Formato de documentaÃ§Ã£o"
      opts.separator "  bin/test -c                                 # Com cobertura de cÃ³digo"
      opts.separator "  bin/test --fail-fast                       # Para na primeira falha"
      opts.separator "  bin/test --profile                         # Mostra testes mais lentos"
    end

    begin
      @remaining_args = parser.parse(args)
    rescue OptionParser::InvalidOption => e
      puts "Erro: #{e.message}"
      puts parser
      exit 1
    end
  end

  def setup_environment
    # Verifica se estamos no diretÃ³rio correto
    unless File.exist?(File.join(@project_root, 'Gemfile'))
      puts "Erro: Execute este comando a partir do diretÃ³rio raiz do projeto CrystaShell"
      exit 1
    end

    # Verifica se as dependÃªncias estÃ£o instaladas
    unless system('bundle check > /dev/null 2>&1')
      puts "âš ï¸  DependÃªncias nÃ£o instaladas. Executando bundle install..."
      unless system('bundle install')
        puts "âŒ Falha ao instalar dependÃªncias"
        exit 1
      end
    end

    # Define variÃ¡veis de ambiente para teste
    ENV['CRYSTASHELL_ENV'] = 'test'
    ENV['CRYSTASHELL_ROOT'] = @project_root
  end

  def execute_tests
    rspec_args = build_rspec_args
    command = "bundle exec rspec #{rspec_args.join(' ')}"
    
    puts "ğŸ§ª Executando testes do CrystaShell..."
    puts "ğŸ“‚ DiretÃ³rio: #{@project_root}"
    puts "ğŸ”§ Comando: #{command}" if @options[:verbose]
    puts "-" * 50

    # Executa os testes
    success = system(command)
    
    puts "-" * 50
    if success
      puts "âœ… Todos os testes passaram!"
    else
      puts "âŒ Alguns testes falharam"
      exit 1
    end
  end

  def build_rspec_args
    args = []

    # Arquivos especÃ­ficos ou padrÃ£o
    if @remaining_args.any?
      args.concat(@remaining_args)
    else
      args << @spec_dir
    end

    # Formato
    args << "--format" << @options[:format]

    # PadrÃ£o de filtro
    if @options[:pattern]
      args << "--example" << "*#{@options[:pattern]}*"
    end

    # OpÃ§Ãµes adicionais
    args << "--fail-fast" if @options[:fail_fast]
    args << "--profile" if @options[:profile]
    
    if @options[:seed]
      args << "--seed" << @options[:seed]
    end

    # Cores e formataÃ§Ã£o
    args << "--color"
    args << "--tty" unless ENV['CI']

    # Cobertura (se solicitada)
    if @options[:coverage]
      args << "--require" << "#{@project_root}/spec/support/coverage"
    end

    args
  end
end

# Executa apenas se chamado diretamente
if __FILE__ == $0
  TestRunner.new.run
end
